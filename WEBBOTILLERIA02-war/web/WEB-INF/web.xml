<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AgregaProductoServlet</servlet-name>
        <servlet-class>SessionBean.AgregaProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscaPorIDServlet</servlet-name>
        <servlet-class>SessionBean.BuscaPorIDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaProductosServlet</servlet-name>
        <servlet-class>SessionBean.ListaProductosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <servlet-class>SessionBean.EliminarProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarProductoServlet</servlet-name>
        <servlet-class>SessionBean.EditarProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgregaProductoServlet</servlet-name>
        <url-pattern>/AgregaProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscaPorIDServlet</servlet-name>
        <url-pattern>/BuscaPorIDServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaProductosServlet</servlet-name>
        <url-pattern>/ListaProductosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <url-pattern>/EliminarProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarProductoServlet</servlet-name>
        <url-pattern>/EditarProductoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
